{
  "name": "somedom",
  "version": "0.0.8",
  "description": "Building blocks for the DOM.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "browser": "dist/index.umd.min.js",
  "scripts": {
    "build:browser": "bili --format umd-min --module-name somedom --minimal --file-name index.umd.js",
    "build:node": "bili src/index.js --minimal --format cjs --format es",
    "build:ssr": "bili src/ssr/index.js --minimal --format cjs --file-name index.ssr.js",
    "build": "npm run build:browser && npm run build:node && npm run build:ssr",
    "dev": "bili --format iife-min --minimal tests/e2e/*.test.js --module-name sandbox -d docs",
    "watch": "npm test -- -w",
    "serve": "live-server docs",
    "test": "npm run test:unit --",
    "test:ci": "npm run coverage && npm run report --",
    "test:unit": "NODE_ENV=test _mocha --exit --recursive -r esm -bR spec tests/unit",
    "coverage": "nyc -x '**/fixtures/**' -x '**/*.test.js' npm run test:unit",
    "coverage:unit": "npm run coverage -- npm run test:unit",
    "codecov": "codecov --file=coverage/lcov.info -e TRAVIS_NODE_VERSION",
    "report": "nyc report",
    "lint": "eslint src tests",
    "pretest": "npm run lint",
    "prepublish": "npm run build",
    "test-e2e": "BASE_URL=http://localhost:8080 testcafe",
    "test-live": "BASE_URL=http://localhost:8080 testcafe-live",
    "test-e2e-ci": "npm run test-e2e -- --ports 9505,9506 remote:1"
  },
  "author": "Alvaro Cabrera <pateketrueke@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "bili": "^4.4.0",
    "chai": "^4.1.2",
    "codecov": "^3.0.4",
    "eslint": "^5.15.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "esm": "^3.0.78",
    "live-server": "^1.2.1",
    "mocha": "^6.0.2",
    "nyc": "^13.3.0",
    "testcafe": "^1.1.0",
    "testdouble": "^3.11.0"
  }
}
